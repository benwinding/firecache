{
  "compilerOptions": {
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist/lib",
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "importHelpers": true,
    "lib": ["dom", "es2018"]
  },
  "exclude": ["**/*.spec.ts", "dist"]
}
